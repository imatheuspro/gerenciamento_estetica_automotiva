<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" 
            minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@../CSS/Style.css"
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.estetica_automotiva.controller.novoServicoController">

   <children>

  
      <ImageView fitHeight="410.0" fitWidth="600.0" layoutY="-6.0"
                 pickOnBounds="true" preserveRatio="true">
         <image><Image url="@../images/background.jpg"/></image>
      </ImageView>

      <ImageView fitHeight="338.0" fitWidth="708.0" layoutX="-1.0" 
                 layoutY="70.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@../images/background.jpg"/></image>
      </ImageView>

  
      <TextField fx:id="nomeCliente" layoutX="34.0" layoutY="53.0"
                 promptText="Nome..."
                 styleClass="campoTexto"/>

      <TextField fx:id="telefoneCliente" layoutX="34.0" layoutY="111.0"
                 promptText="Telefone..."
                 styleClass="campoTexto"/>

      <TextField fx:id="emailCliente" layoutX="34.0" layoutY="164.0"
                 promptText="Email..."
                 styleClass="campoTexto"/>

      <TextField fx:id="cpfCliente" layoutX="34.0" layoutY="213.0"
                 promptText="CPF..."
                 styleClass="campoTexto"/>
      
      <TextField fx:id="placaVeiculo" layoutX="228.0" layoutY="53.0"
                 promptText="Placa..."
                 styleClass="campoTexto"/>

      <TextField fx:id="modeloVeiculo" layoutX="228.0" layoutY="111.0"
                 promptText="Modelo..."
                 styleClass="campoTexto"/>

      <TextField fx:id="anoVeiculo" layoutX="225.0" layoutY="164.0"
                 promptText="Ano..."
                 styleClass="campoTexto"/>

      <TextField fx:id="precoServico" layoutX="418.0" layoutY="111.0"
                 promptText="Preço..."
                 styleClass="campoTexto"/>


      <ComboBox fx:id="comboCategoria" layoutX="225.0" layoutY="213.0"
                prefWidth="150.0" promptText="Categoria"
                styleClass="comboCampo"/>

      <ComboBox fx:id="comboServico" layoutX="418.0" layoutY="53.0"
                prefWidth="150.0" promptText="Serviço"
                styleClass="comboCampo"/>

 
      <Button fx:id="btnCancelarDados" layoutX="34.0" layoutY="352.0"
              onAction="#voltarInicio"
              text="Cancelar" textFill="WHITE"
              styleClass="btnCancelar">
         <font><Font name="System Bold" size="12.0"/></font>
      </Button>

      <Button fx:id="btnSalvarDados" layoutX="523.0" layoutY="351.0"
              prefHeight="26.0" prefWidth="62.0"
              onAction="#salvarDados"
              text="Salvar" textFill="WHITE"
              styleClass="btnSalvar">
         <font><Font name="System Bold" size="12.0"/></font>
      </Button>

      <Label layoutX="265.0" text="Novo Serviço" textFill="WHITE"/>

      <ImageView fitHeight="212.0" fitWidth="212.0" layoutX="387.0" 
                 layoutY="133.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@../images/wash car logo.png"/></image>
      </ImageView>

      <Label layoutX="34.0" layoutY="31.0" text="Nome do Cliente" textFill="WHITE"/>
      <Label layoutX="34.0" layoutY="94.0" text="Telefone do Cliente" textFill="WHITE"/>
      <Label layoutX="34.0" layoutY="146.0" text="Email do Cliente" textFill="WHITE"/>
      <Label layoutX="34.0" layoutY="192.0" text="CPF do Cliente" textFill="WHITE"/>

      <Label layoutX="228.0" layoutY="31.0" text="Placa do Veículo" textFill="WHITE"/>
      <Label layoutX="228.0" layoutY="94.0" text="Modelo do Veículo" textFill="WHITE"/>
      <Label layoutX="228.0" layoutY="146.0" text="Ano do Veículo" textFill="WHITE"/>
      <Label layoutX="228.0" layoutY="192.0" text="Categoria do Veículo" textFill="WHITE"/>

      <Label layoutX="418.0" layoutY="94.0" text="Preço do Serviço" textFill="WHITE"/>
      <Label layoutX="418.0" layoutY="32.0" text="Tipo do Serviço" textFill="WHITE"/>

      <Label layoutX="418.0" layoutY="239.0" prefHeight="33.0" prefWidth="150.0"
             text="Estetica Automotiva">
         <font><Font name="VALORANT" size="12.0"/></font>
      </Label>

   </children>
</AnchorPane>
